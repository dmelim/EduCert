    <h1>Add Student Information</h1>
    <form action="/aluno" method="Post">
        <section>
            <label for="name">Student Name</label>
            <input type="text" id="name" placeholder="name" name="name">
        </section>
        <section>
            <label for="num_student">Student Number</label>
            <input type="text" id="num_student" placeholder="num_student" name="num_student">
        </section>
        <section>
            <label for="class_final">Final Grade</label>
            <input type="text" id="class_final" placeholder="class_final" name="class_final">
        </section>
        <section>
            <label for="Institution">University</label>
            <input type="text" id="Institution" placeholder="Institution" name="Institution">
        </section>
        <section>
            <label for="Course">Course</label>
            <input type="text" id="Course" placeholder="Course" name="Course">
        </section>
        <section>
            <label for="conc_date">Conclusion Date</label>
            <input type="date" id="conc_date" placeholder="conc_date" name="conc_date">
        </section>
        <section>
            <label for="certificate">Student certificate</label>
            <input type="file" id="certificate" placeholder="certificate" name="certificate" class="custom-file-input">
        </section>
        <button>Submit</button>
    </form>
    
