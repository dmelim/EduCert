<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="stylesheet" href="http://localhost:3000/public/styles/style.css">
    <script src="http://localhost:3000/public/jquery-3.6.0.min.js"></script>
    <script src="http://localhost:3000/public/xlsx.full.min.js"></script>

</head>
<body class="background-body">
  <% if (user === "admin") { %>
    <nav class="navbar navbar-dark navbar-expand-lg navbar-color">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">EduCert</a>
            <div class="nav text-color-white">
              <a class="nav-link white active" aria-current="page" href="/">Home</a>
              <div class="dropdown">
                <a class="nav-link dropdown-toggle white" href="#" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">New Data</a>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                  <a class="dropdown-item " href="/new-data/one-entry">One Entry</a>
                  <a class="dropdown-item " href="/new-data/multiple-entry">Multiple Entry</a>
                </div>
              </div>
              <a class="nav-link white" href="/search">Search</a>
              <div class="dropdown">
                <a class="nav-link dropdown-toggle white" href="#" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">Admin</a>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                  <a class="dropdown-item " href="/logout">Log Out</a>
                </div>
              </div>
          </div>
        </div>
    </nav>
    <%} else { %>
      <nav class="navbar navbar-dark navbar-expand-lg navbar-color">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">EduCert</a>
            <div class="nav text-color-white">
              <a class="nav-link white active" aria-current="page" href="/">Home</a>
              <a class="nav-link white" href="/search">Search</a>
              <a class="nav-link white" href="/login">Login</a>
          </div>
        </div>
    </nav>
      <% } %>

    
    <div class="container-fluid container-background pt-5 pb-5 d-flex align-items-center justify-content-center">
      <div class="px-4 pt-5 pb-5 text-center ">
        <h3 class="mb-3 h1-color">Add an excel file to upload multiple students information</h1>
        <input type="file" class="form-control" name="fileUpload" id="fileUpload" lang="en">
        <div class="col mx-auto">
          <button type="button" class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#exampleModal">
            See Data Preview
          </button>
          <button class="btn btn-primary mt-3" id="button_import" lang="en">submit</button>
        </div>
      </div>
    </div>

    <!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" >
        <p class="m-2" id="jsonObject"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
    <script src="http://localhost:3000/public/excel_import.js"></script>
</body>
</html>